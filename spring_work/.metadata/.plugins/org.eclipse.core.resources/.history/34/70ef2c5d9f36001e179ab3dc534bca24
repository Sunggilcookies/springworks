package student;

import java.util.Arrays;

public class Student {
	String name;
	int[] jum;
	float tot, arg;
	int rank;

	public void setJum(int... jum) {
		this.jum = jum;
		tot=0;
		tot= Arrays.stream(jum).sum();
		arg=tot/jum.length;
	}
	

	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public float getTot() {
		return tot;
	}


	public void setTot(float tot) {
		this.tot = tot;
	}


	public float getArg() {
		return arg;
	}


	public void setArg(float arg) {
		this.arg = arg;
	}


	public int getRank() {
		return rank;
	}


	public void setRank(int rank) {
		this.rank = rank;
	}


	public int[] getJum() {
		return jum;
	}


	@Override
	public String toString() {
	return name + ", 점수:" + Arrays.toString(jum) + ", 합계:" + tot + ", 평균:" + arg + "순위"+rank+"]\n";
	
	}



}


