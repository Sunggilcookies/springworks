package student;

import java.text.ParseException;
import java.util.Arrays;
import java.util.random.RandomGenerator.JumpableGenerator;

public class Student {
	String name;
	int[] jum;
	float tot, arg;
	int rank;
	
	
	public Student(String name, int[] jum) {
		super();
		this.name = name;
		this.jum = jum;
		
		calc();
		
	}
	

	public void calc() {
		tot= Arrays.stream(jum).sum();
		arg=tot/jum.length;
		rank=1;
	}
	public void rankCalc(Student[] exArr) { // 아무 배열을 집어넣었을때 배열인덱스만큼 반복
	      rank = 1;
	      for (Student i : exArr) { // exArr[you]이런 뜻임
	         if (arg < i.arg) {
	            rank++;
	         }
	      }
	   }
	
	
	
	public void setName(String name) {
		this.name = name;
	}


	public void setJum(int[] jum) {
		this.jum = jum;
	}


	public void setTot(int tot) {
		this.tot = tot;
	}


	public void setArg(int arg) {
		this.arg = arg;
	}


	public void setRank(int rank) {
			this.rank = rank;
	}


	
	
	
	@Override
	public String toString() {
	return name + ", 점수:" + Arrays.toString(jum) + ", 합계:" + tot + ", 평균:" + arg + ", 순위:"
			+ rank + "]";
	
	}



}


