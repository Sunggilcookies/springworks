package aop_p.grade;


import org.aspectj.lang.JoinPoint;
import org.springframework.stereotype.Component;

@Component
public class GradeAdvice {

	void two(JoinPoint joinPoint, int[] t1, int[] e1) {
		
		int arg1=0;
		int arg2=0;
		int arg=0;
		int total=0;
		for(int i=0;i<t1.length;i++) {
			arg1=arg1+=(t1[i]/t1.length);
			arg2=arg2+=(e1[i]/t1.length);
		}
		total = arg1+arg2;
		arg= total/t1.length;
		
		System.out.println("학생수 : "+t1.length+", 국어 평균"+arg1+",영어평균"+arg2+",평균합계"+total+",전체평균"+arg);
	}
	void three(JoinPoint joinPoint, int[] t1, int e1[], int[] m1 ) {
		
		int arg1=0;
		int arg2=0;
		int arg3=0;
		int arg=0;
		int total=0;
		for(int i=0;i<t1.length;i++) {
			arg1=arg1+=(t1[i]/t1.length);
			arg2=arg2+=(e1[i]/t1.length);
			arg3=arg3+=(m1[i]/t1.length);
		}
		total = arg1+arg2+arg3;
		arg= total/t1.length;
		System.out.println("학생수 : "+t1.length+", 국어 평균 : "+arg1+",영어평균 : "+arg2+",수학평균 : "+arg3+"평균합계"+total+",전체평균"+arg);
	}
	void four(JoinPoint joinPoint, int p, int f, int o, int u, int r) {
		int arg=f+o+u+r/4;
		int total=f+o+u+r;
		System.out.println("평균"+arg+" 합계"+total);
	}
	
	

	
	
	
}
