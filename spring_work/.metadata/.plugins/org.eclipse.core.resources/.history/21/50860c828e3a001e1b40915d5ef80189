package greentest;

import java.util.Scanner;

public class test1_main {
	public static void main(String[] args) {
		
		/*
		 * int total=0; for(int i=0;i<=10;i++) { Scanner sc = new Scanner(System.in);
		 * int j=0;
		 * 
		 * while(true) { int list =sc.nextInt(); total = total+list; j=j+1; if(j<10) {
		 * break; }
		 * 
		 * }
		 * 
		 * }System.out.println(total);
		 */
		
		Scanner a = new Scanner(System.in);
		Scanner b = new Scanner(System.in);
		Scanner c = new Scanner(System.in);
		float num1 = a.nextFloat();
		float num2 = b.nextFloat();
		float num3 = c.nextFloat();
		int total = (num1-num2)*(num2+num3)*(num3/num1);
		
		System.out.print(total);
		
		
		
		
	}
}
