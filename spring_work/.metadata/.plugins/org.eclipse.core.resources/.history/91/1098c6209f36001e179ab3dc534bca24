package student;

import java.util.Arrays;

public class Student {
	String name;
	int[] jum;
	float tot, arg;
	int rank;

	public void setJum(int... jum) {
		this.jum = jum;
		tot=0;
		tot= Arrays.stream(jum).sum();
		arg=tot/jum.length;
	}


	@Override
	public String toString() {
	return name + ", 점수:" + Arrays.toString(jum) + ", 합계:" + tot + ", 평균:" + arg + "순위"+rank+"]\n";
	
	}



}


