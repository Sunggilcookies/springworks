package student;

import java.text.ParseException;
import java.util.Arrays;
import java.util.random.RandomGenerator.JumpableGenerator;

public class Student {
	String name;
	int[] jum;
	float tot, arg;
	int rank;
	
	public Student(String name, int[] jum) {
		super();
		this.name = name;
		this.jum = jum;
		calc();
	}
	

	public void calc() {
		tot= Arrays.stream(jum).sum();
		arg=tot/jum.length;
		
	}


	@Override
	public String toString() {
	return name + ", 점수:" + Arrays.toString(jum) + ", 합계:" + tot + ", 평균:" + arg + ", 순위:"
			+ rank + "]";
	
	}



}


